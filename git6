import java.util.*;
public class git6
{

	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		String s=sc.nextLine();
		String s1[]=new String[s.length()];
		for(int i=0;i<s1.length;i++)
		{
			if(i%2==0)
			{
				System.out.print(s.charAt(i+1));
			}
			else
			{
				System.out.print(s.charAt(i-1));
			}
		}
	    
		}
	}

